// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "confirm_quit": true, // TODO revisit after figuring out a good binding for Emacs fill paragraph like behavior

  "active_pane_modifiers": {
    "border_size": 2.0,
    "inactive_opacity": 1.0,
    "magnification": 1.0
  },

  "preferred_line_length": 120,
  "wrap_guides": [120],

  // Keys here must be "extension ID".
  // Easiest way to find this is install via "zed: extensions" -> "Installed" -> "â€¦" (lower right of each installed extension) -> "Copy Extension ID"
  "auto_install_extensions": {
    "git-firefly": true,
    "html": true,
    "org": true,
    "tomorrow-theme": true
  },

  "base_keymap": "Emacs",
  "ui_font_family": "PragmataPro Liga",
  "ui_font_size": 18,
  "buffer_font_family": "PragmataPro Mono Liga",
  "buffer_font_size": 18,
  "theme": {
    "mode": "system",
    "light": "Tomorrow",
    "dark": "Tomorrow at Midnight"
  },
  "cursor_shape": "block",
  "cursor_blink": true,
  "gutter": {
    "folds": false,
    "line_numbers": false
  },
  "indent_guides": {
    "coloring": "indent_aware"
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "tabs": {
    "git_status": true
  },
  "extend_comment_on_newline": false
}
