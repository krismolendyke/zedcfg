// https://zed.dev/docs/configuring-zed
{
  "minimap": { "show": "never" },
  "agent": {
    "always_allow_tool_actions": true,
    "play_sound_when_agent_done": true,
    "default_profile": "minimal",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-latest"
    }
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "confirm_quit": true,

  "project_panel": {
    "auto_reveal_entries": true
  },

  "file_types": {
    "Shell Script": ["env.example", "env.development"],
    "TOML": [".sqlfluff"],
    "YAML": [".yamllint"]
  },

  "active_pane_modifiers": {
    "border_size": 2.0,
    "inactive_opacity": 1.0
  },

  "preferred_line_length": 120,
  "wrap_guides": [120],

  // Keys here must be "extension ID".
  // Easiest way to find this is to install:
  // "zed: extensions" -> "Installed" -> "â€¦" (lower right of each installed extension) -> "Copy Extension ID"
  "auto_install_extensions": {
    "base16": true,
    "basher": true,
    "caddyfile": true,
    "colored-zed-icons-theme": true,
    "dockerfile": true,
    "git-firefly": true,
    "html": true,
    "just:": true,
    "log": true,
    "make": true,
    "org": true,
    "pyrefly": true,
    "sql": true,
    "terraform": true,
    "tombi": true
  },

  // See https://github.com/zed-industries/zed/blob/main/assets/keymaps/macos/emacs.json for the actual Emacs
  // keybindings because those will not be shown by zed: open default keymap
  "base_keymap": "Emacs",

  // Font
  "agent_buffer_font_size": 18,
  "agent_ui_font_size": 20,
  "buffer_font_family": "PragmataPro VF Mono Liga",
  "buffer_font_size": 20,
  "buffer_font_weight": 500,
  "ui_font_family": "PragmataPro VF Liga",
  "ui_font_size": 18,
  "ui_font_weight": 500,

  // https://fsd.it/pragmatapro/Handbook.rtf
  "buffer_font_features": {
    "calt": true, // Contextual alternative ligatures
    "liga": true, // Ligatures
    "ss16": false, // Serif
    "ss18": true // # Bug // Bug # TODO // HACK tags
  },

  // This most closely approximates my Emacs config
  "buffer_line_height": { "custom": 1.2 },

  "theme": {
    "mode": "system",
    "light": "Base16 Gruvbox Material Light, Soft",
    "dark": "Base16 Gruvbox Material Dark, Soft"
  },
  "icon_theme": {
    "mode": "system",
    "light": "Colored Zed Icons Theme Light",
    "dark": "Colored Zed Icons Theme Dark"
  },
  "cursor_shape": "bar",
  "cursor_blink": true,
  "gutter": {
    "folds": false,
    "line_numbers": true
  },
  "git": {
    "inline_blame": {
      "enabled": true,
      "delay_ms": 750
    }
  },
  "indent_guides": {
    "coloring": "indent_aware"
  },
  "inlay_hints": {
    "enabled": false,
    "toggle_on_modifiers_press": {
      "control": true,
      "alt": true,
      "platform": true
    }
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "tabs": {
    "git_status": true
  },
  "use_system_path_prompts": false,
  "extend_comment_on_newline": false,

  "languages": {
    "JavaScript": {
      "formatter": {
        "external": {
          "command": "prettier",
          "arguments": ["--stdin-filepath", "{buffer_path}", "--trailing-comma", "all"]
        }
      }
    },

    "Python": {
      "formatter": {
        "external": {
          "command": "ruff",
          "arguments": ["format", "--stdin-filename", "{buffer_path}", "-"]
        }
      },
      "language_servers": ["pyrefly", "ruff", "!pyright", "!pylsp"],
      "code_actions_on_format": {
        "source.organizeImports.ruff": true,
        "source.fixAll.ruff": true
      },
      "format_on_save": "on"
    }
  },

  "lsp": {
    "pyrefly": {
      "settings": {
        "pyrefly": {
          "project_excludes": ["**/.[!/.]*", "**/*venv/**"],
          "ignore_errors_in_generated_code": true
        }
      }
    },

    "ruff": {
      "initialization_options": {
        "settings": {
          "lineLength": 120,
          "lint": {
            "extendSelect": ["I"]
          }
        }
      }
    }
  }
}
