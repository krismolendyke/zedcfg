{
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "confirm_quit": true,

  "active_pane_modifiers": {
    "border_size": 2.0,
    "inactive_opacity": 1.0,
    "magnification": 1.0
  },

  "preferred_line_length": 120,
  "wrap_guides": [120],

  // Keys here must be "extension ID".
  // Easiest way to find this is to install:
  // "zed: extensions" -> "Installed" -> "â€¦" (lower right of each installed extension) -> "Copy Extension ID"
  "auto_install_extensions": {
    "git-firefly": true,
    "html": true,
    "material-icon-theme": true,
    "material-theme": true,
    "one-dark-pro": true,
    "org": true,
    "oxocarbon": true,
    "toml": true,
    "tomorrow-theme": true
  },

  // See https://github.com/zed-industries/zed/blob/main/assets/keymaps/macos/emacs.json for the actual Emacs
  // keybindings because those will not be shown by zed: open default keymap
  "base_keymap": "Emacs",

  "ui_font_family": "PragmataPro Liga",
  "ui_font_size": 18,
  "ui_font_weight": 600,
  "buffer_font_family": "PragmataPro Mono Liga",
  "buffer_font_size": 18,
  "buffer_font_weight": 400,
  "theme": {
    "mode": "system",
    "light": "Material Theme Lighter High Contrast",
    "dark": "Material Theme Darker High Contrast"
  },
  "icon_theme": {
    "mode": "system",
    "light": "Material Icon Theme",
    "dark": "Material Icon Theme"
  },
  "cursor_shape": "block",
  "cursor_blink": true,
  "gutter": {
    "folds": false,
    "line_numbers": false
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "indent_guides": {
    "coloring": "indent_aware"
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "tabs": {
    "git_status": true
  },
  "use_system_path_prompts": false,
  "extend_comment_on_newline": false
}
